[alias]
  branches = branch -a
  clear = reset --hard
  clear-branches = ! "git branch | grep -v 'develop' | xargs git branch -D"
  cp = cherry-pick
  discard = checkout --
  discard = checkout HEAD --
  fetch = fetch --all
  get = !git clone git@$1
  log = log --color --decorate=full
  pullr = pull --rebase
  remotes = remote
  setup = !git init && git checkout -b develop && git add . && git commit -m 'initial commit'
  tree = log --all --graph --decorate=short --color --format=format:'%an %C(blue)%h%C(reset) %C(white)%s%C(reset)%C(auto)%d%C(reset) %ar'
  undo = reset HEAD~1
  unstage = reset HEAD --
  ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"

[color]
  ui = auto

[commit]
  template = ~/.config/git/commit.template
  gpgsign = true

[core]
  excludesfile = ~/.gitignore
  safecrlf = true
  trustctime = false
  editor = code --wait

[diff]
  tool = code

[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

[merge]
  tool = vscode

[mergetool "vscode"]
  cmd = code --wait $MERGED

[pull]
  ff = only

[push]
  default = simple

[help]
  autocorrect = 1

[diff]
  algorithm = patience
  compactHeuristic = true

[protocol]
  version = 2

[github]
  user = karlbateman

[merge]
  tool = nvim -d

[user]
  name = Karl Bateman
  email = karl.bateman@pm.me
  signingkey = 367EC540A9D7B466

[http]
  cookiefile = /home/karlbateman/.config/git/cookiefile

[url "git@github.com:"]
  insteadOf = gh:

[url "git@git.krb.dev:"]
  insteadOf = g:

[init]
  defaultBranch = develop

[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
