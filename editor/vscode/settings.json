{
  // Workbench settings.
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#44475A",
    "editor.lineHighlightBorder": "#44475A",
    "editorCursor.foreground": "#F8F8F2",
    "editorInlayHint.background": "#282A36",
    "editorInlayHint.foreground": "#44475A",
    "minimap.background": "#191A21",
    "minimap.errorHighlight": "#FF5555",
    "minimap.findMatchHighlight": "#50FA7b",
    "minimap.selectionHighlight": "#F8F8F2",
    "minimap.warningHighlight": "#FFB86C",
    "minimap.selectionOccurrenceHighlight": "#50fa7b",
    "editorOverviewRuler.background": "#191A21",
    "scrollbarSlider.activeBackground": "#F8F8F244",
    "scrollbarSlider.hoverBackground": "#F8F8F233",
    "scrollbarSlider.background": "#F8F8F222",
    "terminalCursor.foreground": "#F8F8F2",
    "scrollbar.shadow": "#282A36",
    "widget.shadow": "#282A36",
    "listFilterWidget.shadow": "#282A36",
    "statusBar.background": "#343746",
    "statusBarItem.remoteBackground": "#F8F8F222",
    "statusBarItem.remoteForeground": "#F8F8F2"
  },

  // Window settings.
  "window.menuBarVisibility": "toggle",
  "window.restoreWindows": "none",
  "window.titleBarStyle": "native",
  "window.zoomLevel": 2,

  // Explorer settings.
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",

  // File settings.
  "files.hotExit": "off",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.pyc": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/venv": true,
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**/venv/**": true
  },
  "files.associations": {
    "config": "plaintext",
    "profile": "plaintext"
  },

  // Terminal settings.
  "terminal.integrated.fontFamily": "'JetBrains Mono', monospace",
  "terminal.integrated.fontSize": 14,

  // Editor settings.
  "editor.minimap.enabled": true,
  "editor.minimap.autohide": false,
  "editor.minimap.scale": 2,
  "editor.minimap.renderCharacters": false,
  "editor.guides.indentation": true,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.renderWhitespace": "selection",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.fontSize": 14,
  "editor.fontFamily": "'JetBrains Mono', monospace",
  "editor.fontLigatures": true,
  "editor.suggestSelection": "first",
  "editor.rulers": [80],
  "editor.wordWrapColumn": 79,
  "editor.wordWrap": "off",
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "blink",
  "editor.renderLineHighlight": "all",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "Comment",
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },

  // Python settings.
  "python.linting.pylintEnabled": true,
  "python.languageServer": "Pylance",
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=80"],
  "python.venvPath": "${workspaceFolder}/venv",

  // Go settings.
  "go.toolsManagement.autoUpdate": true,

  // Javascript settings.
  "javascript.suggest.paths": false,
  "javascript.updateImportsOnFileMove.enabled": "prompt",

  // Typescript settings.
  "typescript.tsserver.log": "off",
  "typescript.updateImportsOnFileMove.enabled": "prompt",

  // Misc settings.
  "breadcrumbs.enabled": false,
  "security.workspace.trust.enabled": false,
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.folders.color": "#6272a4",
  "material-icon-theme.saturation": 1,
  "material-icon-theme.folders.theme": "classic",
  "cSpell.language": "en-GB",
  "cSpell.userWords": ["bson"]
}

